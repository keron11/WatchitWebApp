@model WatchitWebApp.ViewModels.VideoViewModel;
@{
    ViewData["Title"] = Model.Video.Title;
}

<div class="container-xxl">
    <video src="@Model.Video.VideoSrc" controls style="width:100%; height: 400px;"></video>
    <h3>@Model.Video.Title</h3><br>
    <h5>@Model.Video.Discription</h5>
    <div class="row">
        <div class="col">
            <img src="@Model.Creator.Avatar" style="width:50px; border-radius: 25px; height: 50px;">
            <a href="/Channel/Main?u=@Model.Creator.User.Login">@Model.Creator.User.Username</a>
        </div>
    </div>
    <div style=" border-radius: 5px; padding: 8px; ">
        <input type="hidden" value="@Model.Creator.User.Id" name="creatorId" id="creatorId" />
        <input type="hidden" value="@Model.CurrentUser.User.Id" name="currentUserId" id="currentUserId" />
        <label>@Model.Subscribes підписників</label>
        @if (Model.Subscribe == null)
        {
            <input type="checkbox" id="subscribe" hidden/>
            <label id="subText">Підписатися</label>
        } 
        else if (Model.Video.UserId == Model.CurrentUser.Id) {
            <label>Ваше відео</label>
        }
        else
        {
            <input type="checkbox" id="subscribe" checked hidden />
            <label id="subText">Ви підписані</label>
        }
    </div>
</div>