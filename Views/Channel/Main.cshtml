@using WatchitWebApp.Entities;
@model WatchitWebApp.ViewModels.ChannelViewModel;
@{
    ViewData["Title"] = Model.Creator.User.Username;
}

<div class="card m-2" style="width: 18rem;">
    <img class="card-img-top" src="@Model.Creator.Avatar" alt="Card image cap" style=" height:180px;">
    <div class="card-body">
        <h4 class="card-title">@Model.Creator.User.Name</h4><br>
        <span class="card-text">@Model.Creator.Info</span><br>
        <span>Еmail: @Model.Creator.User.Email</span><br>
        <span>Логін: @Model.Creator.User.Login</span><br>
        <span>Нікнейм: @Model.Creator.User.Username</span><br>
    </div>
</div>

<div class="d-flex flex-row">
    @foreach (Video video in Model.Videos)
    {
        <a href="/Content/Watch?v=@video.NanoId" class="card m-2" style="width: 18rem;">
            <div style="width: 18rem; height: 100%;">
                <img class="card-img-top" src="@video.PreviewSrc" alt="Card image cap">
            </div>

            <div class="card-body">
                <h5 class="card-title">@video.Title</h5>
                <h6>@video.DatePublished</h6>
            </div>
        </a>
    }
</div>